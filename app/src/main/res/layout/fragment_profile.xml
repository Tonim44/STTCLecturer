<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/background"
        app:tint="@color/colorPrimaryDark" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="227dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/login_shape_bk">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="733dp"
            android:layout_height="170dp"
            android:elevation="7dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_login_bk"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fotoProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_circle_white"
            android:src="@drawable/ic_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/edit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="108dp"
            android:src="@drawable/edit"
            app:layout_constraintEnd_toEndOf="@+id/fotoProfile"
            app:layout_constraintHorizontal_bias="0.887"
            app:layout_constraintStart_toStartOf="@+id/fotoProfile"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nama_dosen"
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/fotoProfile"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/open_sans_semibold"
            android:textAlignment="center"
            android:text="Neti Nuryati, SP.d.,MP.Mat"
            android:textColor="@color/whiteTextColor"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.551"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fotoProfile" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        style="@style/IconCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/action_bar"
        android:background="@color/white"
        app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="NIP :"
            android:textColor="@color/DarkText"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/detail_nip"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="-20dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="123123123"
            android:textAlignment="viewEnd"
            android:textColor="@color/DarkText"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Nomor Telepon :"
            android:textColor="@color/DarkText"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/detail_nomertelepon"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="-20dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="6282120781678"
            android:textAlignment="viewEnd"
            android:textColor="@color/DarkText"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>