<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:roundIcon="@drawable/icon"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.SttcCirebonLecturer"
        tools:targetApi="31">

        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.SttcCirebonLecturer.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.SttcCirebonLecturer.NoActionBar"
            android:exported="false" />

        <activity
            android:name=".DashboardActivity"
            android:theme="@style/Theme.SttcCirebonLecturer.NoActionBar"
            android:exported="false" />

        <activity
            android:name=".ui.sap.PengisianSapActvity"
            android:theme="@style/Theme.SttcCirebonLecturer.NoActionBar"
            android:exported="false" />

        <activity
            android:name=".ui.riwayat.RiwayatActivity"
            android:theme="@style/Theme.SttcCirebonLecturer.NoActionBar"
            android:exported="false" />

        <activity
            android:name=".ui.sap.ValidasiActivity"
            android:theme="@style/Theme.SttcCirebonLecturer.NoActionBar"
            android:exported="false" />

        <activity
            android:name=".ui.sap.MahasiswaActivity"
            android:theme="@style/Theme.SttcCirebonLecturer.NoActionBar"
            android:exported="false" />

        <activity
            android:name=".ui.profile.EditProfileActivity"
            android:theme="@style/Theme.SttcCirebonLecturer.NoActionBar"
            android:exported="false" />

        <activity
            android:name=".SapActivity"
            android:theme="@style/Theme.SttcCirebonLecturer.NoActionBar"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>